        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RupStoreAuthentication"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        xmlns:control="clr-namespace:RupStoreAuthentication.Views"
        Title="Patient Management Login" Height="200" Width="400" Background="#333333">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <control:LoginControl Grid.Row="1" Grid.Column="1"  />
    </Grid>
</controls:MetroWindow>
