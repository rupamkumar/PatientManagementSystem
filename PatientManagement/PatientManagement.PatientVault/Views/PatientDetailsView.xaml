<UserControl x:Class="PatientManagement.PatientVault.Views.PatientDetailsView"
             x:Name="userControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PatientManagement.PatientVault.Views"
             xmlns:infrastructure="clr-namespace:Infrastructure;assembly=Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <UserControl.Resources>
        <infrastructure:ObjectToVisibilityConverter x:Key="ObjectToVisibility" />
        <DataTemplate x:Key="PatientDetailsTemplate">
            <Border BorderBrush="Gray" BorderThickness="5,2,5,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Firstname:" FontWeight="Bold" FontSize="14" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                    <TextBlock Text="{Binding FirstName}" FontWeight="Bold" FontSize="14" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Lastname:" FontWeight="Bold" FontSize="14" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                    <TextBlock Text="{Binding LastName}" FontWeight="Bold" FontSize="14" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

                    <TextBlock Text="Email:" FontWeight="Bold" FontSize="14" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>

                    <TextBlock Text="{Binding Email}" FontWeight="Bold" FontSize="14" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <StackPanel Grid.Column="2" Grid.RowSpan="2"  Orientation="Horizontal">
                        <Button 
                            Command="{Binding DataContext.OpenPatientCommand, ElementName=LayoutRoot}"
                            CommandParameter="{Binding}"
                            Margin="5,0" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Height="Auto" 
                            AutomationProperties.AutomationId="OpenButton">
                            Open
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="PatientTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="FirstName:" FontWeight="Bold"
                           Grid.Row="1" Grid.Column="0" Margin="5,0,5,0" AutomationProperties.AutomationId="ToBlock"/>
                <TextBlock Text="LastName:" FontWeight="Bold"
                           Grid.Row="2" Grid.Column="0" Margin="5,0,5,0" AutomationProperties.AutomationId="SubjectBlock"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="Aqua">
        <ListBox x:Name="PatientListBox" ItemsSource="{Binding PatientsView}" ItemTemplate="{StaticResource PatientDetailsTemplate}" AutomationProperties.AutomationId="PatientsList" Margin="0,20,0,0"/>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" ShowsPreview="True" />
        <ContentControl x:Name="preview" Margin="10,202,0,10"
                        Content="{Binding Patients.CurrentItem}"
                        ContentTemplate="{StaticResource PatientTemplate}"
                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                        Visibility="Hidden"
                        />
    </Grid>
</UserControl>
